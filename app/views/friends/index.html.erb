<p style="color: green"><%= notice %></p>

<% if user_signed_in? %>

  <h1>Friends</h1>
  
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Instagram</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>
            <td>
              <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
            </td>
            <td><%= friend.email %></td>
            <td><%= friend.phone_number %></td>
            <td><%= friend.instagram %></td>
            <td>
              <%= link_to "Show", friend %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "New friend", new_friend_path, class:"btn btn-secondary"%>

<% else %>

  <h1>Welcome to Friends App</h1>
  <p>A simple CRUD Rails App for demostration</p>

<% end %>
